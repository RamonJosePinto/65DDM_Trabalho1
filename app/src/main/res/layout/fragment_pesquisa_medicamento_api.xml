<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo de entrada para nome do medicamento -->
    <EditText
        android:id="@+id/editTextNomeMedicamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pesquisar um medicamento"
        android:inputType="text" />

    <!-- BotÃ£o de pesquisa -->
    <Button
        android:id="@+id/buttonPesquisar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#4CAF50"
        android:text="Pesquisar"
        android:textColor="#FFFFFF" />

    <!-- RecyclerView para exibir a lista de medicamentos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMedicamentos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

</LinearLayout>